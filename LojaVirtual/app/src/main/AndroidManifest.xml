<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.loja.lojavirtual">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LojaVirtual">
        <activity android:name=".fragments.RegisterProducts"></activity>
        <activity
            android:name=".PrincipalScreen"
            android:label="@string/title_activity_principal_screen"
            android:theme="@style/Theme.LojaVirtual.NoActionBar" />
        <activity android:name=".form.FormRegister" />
        <activity android:name=".form.FormLogin" />
        <activity android:name=".MainActivity" />
        <activity
            android:name=".Slides"
            android:theme="@style/Theme.Intro">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>